<h1>TinyApp</h1>
<form method="POST" action="/login">
    <% if (username !== undefined) { %>
        <h4>Welcome back <%= username %>!</h4><br />
    <% } else { %>
    <input type="text" name="username" placeholder="Username here :)" style="width: 160px; margin: 1em">
    <input type="submit" value="Username">
    <% } %>
</form>